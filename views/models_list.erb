<ul class="breadcrumb">
  <li><a href="/">Home</a> <span class="divider">/</span></li>
  <li class="active">Models</li>
</ul>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Model Name</th>
      <th>Model Filepath</th>
      <th width="15%">Request Test</th>
    </tr>
  </thead>
  <tbody>
  <% @models.each do |model| %>
    <tr>
      <td>
        <a href="/models/<%= model.id %>"><%= model.friendly_name %></a></td>
      <td><%= model.filepath %></td>
      <td>
        <form action="/models/<%= model.id %>/run" method="POST">
          <input type="hidden" name="test_type" value="CORRECTNESS"/>
          <button type="submit" class="btn btn-link">Submit</button>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
