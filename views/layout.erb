<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @title %></title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <%= stylesheet "/css/bootstrap.min.css" %>
    <%= stylesheet "/css/bootstrap-fileupload.min.css" %>
    <%= stylesheet "/css/dashboard.css" %>
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>
  </head>

  <body>
    <% if settings.development? %>
    <div class="navbar navbar-fixed-top">
    <% else %>
    <div class="navbar navbar-inverse navbar-fixed-top">
    <% end %>
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="/">Amalgam Dashboard</a>
          <% if settings.development? %>
            <div class="nav-collapse collapse">
              <ul class="nav" style="padding:10px 0 10px">
                <li><span class="label label-important">DEVELOPMENT</span><li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container">
      <%= yield %>
    </div>

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/bootstrap-fileupload.min.js"></script>
    <script src="http://d3js.org/d3.v3.min.js"></script> 
    <script type="text/javascript">
      $(document).ready(function() {
        $("i[data-toggle='tooltip']").tooltip();
      });
    </script>
    <% if settings.ga_tracking_code && settings.ga_domain %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '<%= settings.ga_tracking_code %>', '<%= settings.ga_domain %>');
      ga('send', 'pageview');

    </script>
    <% end %>
  </body>
</html>

